<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="floatingheads.snapclone.FriendsFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary" ></android.support.v7.widget.Toolbar>

    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:searchBackground="@color/colorPrimary"
        app:searchSuggestionBackground="@color/colorPrimary"
        app:searchCloseIcon="@mipmap/ic_close_white_24dp"
        app:searchBackIcon="@mipmap/ic_arrow_back_white_24dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"></com.miguelcatalan.materialsearchview.MaterialSearchView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/friendsListView"
        android:layout_below="@id/tool_bar"
        android:layout_marginBottom="56dp"></ListView>

</RelativeLayout>
